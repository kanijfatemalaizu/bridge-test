extends ../_skeleton-component
include mixins/_form


block append variables
  - var firstParent = 'components'              
  - var currentPage = 'forms'

block component
  .card.shadow-sm.mb-3
    .card-header 
      +PageHeader(pageHeader[0])
   
  .card.shadow-sm.mb-3
    .card-header 
      h5.mb-0 Basic Form
    .card-body.bg-light
      +componentCard
        +formBasic


  .card.shadow-sm.mb-3
    .card-header
      h5.mb-0 Input Group
    .card-body.bg-light
      +componentCard
        +formInputGroup

  .card.shadow-sm.mb-3
    .card-body
      +PageHeader(pageHeader[1])
    
  .row.no-gutters
    .col-lg-6.pr-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0 Checkboxes
        .card-body.bg-light
          +componentCard
            +formCheckbox

    .col-lg-6.pl-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0 Radios
        .card-body.bg-light
          +componentCard
            +formRadio

    .col-lg-6.pr-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0 Inline Radios
        .card-body.bg-light
          +componentCard
            +formInlineRadio
    .col-lg-6.pl-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0 Disabled
        .card-body.bg-light
          +componentCard
            +formDisableCheckbox
    .col-lg-6.pr-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0 Switches
        .card-body.bg-light
          +componentCard
            +formSwithc
    .col-lg-6.pl-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0 Disabled Switches
        .card-body.bg-light
          +componentCard
             +formSwithcDisable
            
    .col-lg-6.pr-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0   Custom Select
        .card-body.bg-light
          +componentCard
            +formCustomSelect.custom-select-lg.mb-3
            +formCustomSelect
            +formCustomSelect.custom-select-sm.mb-3
            
    .col-lg-6.pl-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0   Multiple Select
        .card-body.bg-light
          +componentCard
            +formCustomSelect(multiple='')
            +formCustomSelect(multiple='' size="3")
              
    .col-lg-6.pr-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0 Range Input
        .card-body.bg-light
          +componentCard
            label(for='customRange1') Example range
            = '\n'
            input#customRange1.custom-range(type='range')
    .col-lg-6.pl-lg-2
      .card.shadow-sm.mb-3
        .card-header
          h5.mb-0 File Browser
        .card-body.bg-light
          +componentCard
            .custom-file
              = '\n'
              input#customFile.custom-file-input(type='file')
              = '\n'
              label.custom-file-label(for='customFile') Choose file
              = '\n'

