extends ../_skeleton-component
include mixins/_navbar

block append variables
  - var firstParent = 'components'              
  - var currentPage = 'navbar'

block component
  .card.shadow-sm.mb-3
    .card-header
      +PageHeader(pageHeader)
    
  .card.shadow-sm.mb-3
    .card-header
      h5.mb-0 Navbar Light
    .card-body.bg-light
      +componentCard
        +navigationBar('dark').bg-dark

  .card.shadow-sm.mb-3
    .card-header
      h5.mb-0 Navbar Primary
    .card-body.bg-light
      +componentCard
        +navigationBar('primary').bg-primary
