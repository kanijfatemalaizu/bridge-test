mixin CardOverlay(config)
  .card.bg-dark.text-white&attributes(config.attrs)
    .card-img-top
      img.img-fluid(src=`${CWD}assets/img/${config.img}`, alt='Card image')
    .card-img-overlay.d-flex.align-items-end
      div
        h5.card-title.text-white!=config.title
        p.card-text!=config.body

