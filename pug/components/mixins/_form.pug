mixin formBasic
  form
    .form-group
      = '\n'
      label(for="name") Name
      = '\n'
      input.form-control#name(type="text" placeholder="Name")
      = '\n'
    .form-group
      = '\n'
      label(for="readonly") Read Only
      = '\n'
      input.form-control#readonly(type='text', placeholder='Readonly input hereâ€¦', readonly='')
      = '\n'
    .form-group
      = '\n'
      label Read only plain text
      = '\n'
      input#staticEmail.form-control-plaintext(type='text', readonly='', value='email@example.com')
      = '\n'

    .form-group
      = '\n'
      label(for="email1") Email
      = '\n'
      input.form-control#email1(type="email" placeholder="Email")
      = '\n'
    .form-group
      = '\n'
      label(for="password") Password
      = '\n'
      input.form-control#password(type="password" placeholder="Password")
      = '\n'
    .form-group.form-check
      = '\n'
      input.form-check-input#defaultcheckbox1(type="checkbox")
      = '\n'
      label.form-check-label(for="defaultcheckbox1") Cehckbox
      = '\n'
    .form-group.form-check
      = '\n'
      input#defaultCheck2.form-check-input(type='checkbox', value='', disabled='')
      = '\n'
      label.form-check-label(for='defaultCheck2') Disabled checkbox
      = '\n'
    .form-group.form-check
      = '\n'
      input#exampleRadios2.form-check-input(type='radio', name='exampleRadios', value='option2')
      = '\n'
      label.form-check-label(for='exampleRadios2') Default radio
      = '\n'
    .form-group.form-check
      = '\n'
      input#exampleRadios3.form-check-input(type='radio', name='exampleRadios', value='option3', disabled='')
      = '\n'
      label.form-check-label(for='exampleRadios3') Disabled radio
      = '\n'
    .form-group
      = '\n'
      label(for='exampleFormControlFile1') Example file input
      = '\n'
      input#exampleFormControlFile1.form-control-file(type='file')
      = '\n'
    .form-group
      = '\n'
      label(for='exampleFormControlSelect1') Example select
      = '\n'
      select#exampleFormControlSelect1.form-control
        option 1
        option 2
        option 3
        option 4
        option 5
      = '\n'
    .form-group
      = '\n'
      label(for='exampleFormControlSelect2') Example multiple select
      = '\n'
      select#exampleFormControlSelect2.form-control(multiple='')
        option 1
        option 2
        option 3
        option 4
        option 5
      = '\n'
    .form-group
      = '\n'
      label(for='exampleFormControlTextarea1') Example textarea
      = '\n'
      textarea#exampleFormControlTextarea1.form-control(rows='3')
      = '\n'

    .form-group
      = '\n'
      label(for='formControlRange') Example Range input
      = '\n'
      input#formControlRange.form-control-range(type='range')
      = '\n'

  button.btn.btn-primary.mb-3(type="submit") Save


mixin formInputGroup
  .input-group.mb-3
    .input-group-prepend
      span#basic-addon1.input-group-text @
    input.form-control(type='text', placeholder='Username', aria-label='Username', aria-describedby='basic-addon1')
  .input-group.mb-3
    input.form-control(type='text', placeholder="Recipient's username", aria-label="Recipient's username", aria-describedby='basic-addon2')
    .input-group-append
      span#basic-addon2.input-group-text @example.com
  label(for='basic-url') Your vanity URL
  .input-group.mb-3
    .input-group-prepend
      span#basic-addon3.input-group-text https:example.com/users/
    input#basic-url.form-control(type='text', aria-describedby='basic-addon3')
  .input-group.mb-3
    .input-group-prepend
      span.input-group-text $
    input.form-control(type='text', aria-label='Amount (to the nearest dollar)')
    .input-group-append
      span.input-group-text .00
  .input-group.mb-3
    .input-group-prepend
      span.input-group-text With textarea
    textarea.form-control(aria-label='With textarea')
  .input-group.mb-3
    .input-group-prepend
      .input-group-text
        input(type='checkbox', aria-label='Checkbox for following text input')
    input.form-control(type='text', aria-label='Text input with checkbox')
  .input-group.mb-3
    .input-group-prepend
      .input-group-text
        input(type='radio', aria-label='Radio button for following text input')
    input.form-control(type='text', aria-label='Text input with radio button')
  .input-group.mb-3
    .input-group-prepend
      span.input-group-text First and last name
    input.form-control(type='text', aria-label='First name')
    input.form-control(type='text', aria-label='Last name')
  .input-group.mb-3
    .input-group-prepend
      span.input-group-text $
      span.input-group-text 0.00
    input.form-control(type='text', aria-label='Dollar amount (with dot and two decimal places)')
  .input-group.mb-3
    input.form-control(type='text', aria-label='Dollar amount (with dot and two decimal places)')
    .input-group-append
      span.input-group-text $
      span.input-group-text 0.00
  .input-group.mb-3
    .input-group-prepend
      button.btn.btn-primary.dropdown-toggle.shadow-none(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Dropdown
      .dropdown-menu
        a.dropdown-item(href='#') Action
        a.dropdown-item(href='#') Another action
        a.dropdown-item(href='#') Something else here
        .dropdown-divider(role='separator')
        a.dropdown-item(href='#') Separated link
    input.form-control(type='text', aria-label='Text input with dropdown button')
  .input-group
    input.form-control(type='text', aria-label='Text input with dropdown button')
    .input-group-append
      button.btn.btn-primary.dropdown-toggle.shadow-none(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Dropdown
      .dropdown-menu.dropdown-menu-right
        a.dropdown-item(href='#') Action
        a.dropdown-item(href='#') Another action
        a.dropdown-item(href='#') Something else here
        .dropdown-divider(role='separator')
        a.dropdown-item(href='#') Separated link

