mixin buttonBasic
  each color in colors
    button.btn(type='button' class=`btn-${color}`).mr-1.mb-1
      +cleanText(color)
    = '\n'
      
mixin buttonOutline
  each color in colors
    button.btn(type='button' class=`btn-outline-${color}`).mr-1.mb-1
      +cleanText(color)
    = '\n'
    
mixin buttonSize
  .btn.btn-secondary.btn-sm Small
  .btn.btn-secondary Regular
  .btn.btn-secondary.btn-lg Large

mixin buttonIcon
  button(type='button').btn.btn-primary.btn-sm.mr-1.mb-1
    = '\n'
    span.fas.fa-plus.mr-1(data-fa-transform="shrink-3")
    | Small
    = '\n'
  = '\n'
  button(type='button').btn.btn-primary.mr-1.mb-1
    = '\n'
    span.fas.fa-plus.mr-1(data-fa-transform="shrink-3")
    | Regular
    = '\n'
  = '\n'
  button(type='button').btn.btn-primary.btn-lg.mr-1.mb-1
    = '\n'
    span.fas.fa-plus.mr-1(data-fa-transform="shrink-3")
    | Large
    = '\n'
  = '\n'
  hr
  = '\n'

  button(type='button').btn.btn-primary.mr-1.mb-1
    = '\n'
    span.fas.fa-plus.mr-1(data-fa-transform="shrink-3")
    | Regular
    = '\n'
  = '\n'
  button(type='button').btn.btn-outline-primary.mr-1.mb-1
    = '\n'
    span.fas.fa-plus.mr-1(data-fa-transform="shrink-3")
    | Outline
    = '\n'
  hr
  = '\n'
  button(type='button').btn.btn-primary.mr-1.mb-1
    = '\n'
    | Delete
    span.fas.fa-trash.ml-1(data-fa-transform="shrink-3")
    = '\n'


mixin buttonCapsule
  button(type='button').btn.btn-primary.rounded-capsule.mr-1.mb-1 Example
    = '\n'
  button(type='button').btn.btn-primary.rounded-capsule.mr-1.mb-1
    = '\n'
    span.fas.fa-align-left.mr-1(data-fa-transform="shrink-3")
    | Icon Left
  = '\n'
  button(type='button').btn.btn-primary.rounded-capsule.mr-1.mb-1
    = '\n'
    | Icon Right
    span.fas.fa-align-right.ml-1(data-fa-transform="shrink-3")
    = '\n'
  button.ml-1(type='button').btn.btn-outline-primary.rounded-capsule.mr-1.mb-1 Outline
  = '\n'
  hr
  = '\n'
  button(type='button').btn.btn-sm.btn-primary.rounded-capsule.mr-1.mb-1 Capsule Small
  = '\n'
  button(type='button').btn.btn-primary.rounded-capsule.mr-1.mb-1 Capsule Regular
  = '\n'
  button(type='button').btn.btn-lg.btn-primary.rounded-capsule.mr-1.mb-1 Capsule Large
    
